.container li {
	position: relative;
	border-bottom: 1px solid;
	border-color: var(--main-black-gradient-half);
}
.container li:last-child {
	border: none;
}
.notificationDisable,
.container input[type="checkbox"],
.enableNotification input[type="checkbox"]:checked + label .notification {
	display: none;
}
.enableNotification
	input[type="checkbox"]:checked
	+ label
	.notificationDisable {
	display: block;
}

.notificationDisable path {
	fill: var(--main-black-gradient-half);
}
:global(.enableDarkMode) .notification path {
	fill: var(--main-green);
}
:global(.enableDarkMode) .notificationDisable path {
	fill: var(--main-green-dark);
}
:global(.nextPrayer) {
	background-color: var(--main-black-gradient-half);
}
.enableNotification li {
	padding-left: 50px;
}
.container label {
	display: flex;
	padding: 20px 0;
	align-items: center;
	text-transform: capitalize;
	font-weight: bold;
}
.enableNotification.container label {
	padding: 20px 0;
}
.salahTime {
	right: 0;
	position: absolute;
	border-radius: 30px;
	/* background-color: blanchedalmond; */
	/* padding: 6px 12px; */
	font-weight: normal;
	text-transform: uppercase;
	/* font-size: 1.2rem; */
	font-weight: bold;
}
.icon {
	width: 30px;
	height: 30px;
	/* margin-right: 30px; */
	background-size: 30px;
	position: absolute;
	left: 0;
}
